@GetMapping("/getBook/{id}")
public ResponseEntity<?> getBookById(@PathVariable("id") int id)
{
	Book b1=service.getBookById(id);
	if(b1==null)
	{
		return ResponseEntity.status(404).body(true);
		
		
	}else {
		return ResponseEntity.ok().body(b1);
	}
}
@DeleteMapping("/books/{id}")
public ResponseEntity<?> deleteBook(@PathVariable("id") int id)
{
	String result=service.removeBook(id);
	if(result.equalsIgnoreCase("Book deleted Successfully"))
	{
		return ResponseEntity.status(200).body(result);
	}else {
		return ResponseEntity.status(404).body(result);
	}
	
}
@PutMapping("/books")
public ResponseEntity<?> updateBook(Book b1)
{
	boolean result=service.updateBook(b1);
	if(result)
	{
		return ResponseEntity.status(203).body("Updated Sucessfully");
	}else {
		return ResponseEntity.status(404).body("Updated Un-Sucessfully");
	}
}
}
